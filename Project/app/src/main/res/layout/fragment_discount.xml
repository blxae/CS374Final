<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ScrollingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/previous">

        </Button>

        <TextView android:text="@string/cvsdiscounts"
            android:id="@+id/textView1"
            android:background="@color/bubbleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:padding="8dp"
            android:autoLink="web"
            android:clickable="true"
            android:focusable="true">
        </TextView>

        <TextView android:text="@string/targetdiscounts"
            android:id="@+id/textView2"
            android:background="@color/bubbleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="@dimen/text_margin">
        </TextView>

        <TextView android:text="@string/sevenelevendiscounts"
            android:id="@+id/textView3"
            android:background="@color/bubbleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="@dimen/text_margin">
        </TextView>

        <TextView android:text="@string/aldidiscounts"
            android:id="@+id/textView4"
            android:background="@color/bubbleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="@dimen/text_margin">
        </TextView>

        <TextView android:text="@string/ihopdiscounts"
            android:id="@+id/textView5"
            android:background="@color/bubbleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="@dimen/text_margin">
        </TextView>

        <TextView android:text="@string/macysdiscounts"
            android:id="@+id/textView6"
            android:background="@color/bubbleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="@dimen/text_margin">
        </TextView>

        <TextView android:text="@string/mtadiscounts"
            android:id="@+id/textView7"
            android:background="@color/bubbleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="@dimen/text_margin">
        </TextView>

        <TextView android:text="@string/planetfitnessdiscounts"
            android:id="@+id/textView8"
            android:background="@color/bubbleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="@dimen/text_margin">
        </TextView>

        <TextView android:text="@string/shoppersdiscounts"
            android:id="@+id/textView9"
            android:background="@color/bubbleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="@dimen/text_margin">
        </TextView>

        <TextView android:text="@string/walgreensdiscounts"
            android:id="@+id/textView10"
            android:background="@color/bubbleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="@dimen/text_margin">
        </TextView>




    </LinearLayout>


</ScrollView>
